{
  "Serilog": {
    // 使用的 Serilog sink 包
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Process",
      "Serilog.Sinks.Seq" // 添加 Seq sink
    ],
    // 日志的最低级别
    // "Verbose", "Debug", "Information", "Warning", "Error", "Fatal"
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        // 控制台输出
        "Name": "Console",
        // 控制台输出的格式
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        // 文件输出
        "Name": "File",
        "Args": {
          // 日志文件路径
          "path": "Logs/EFCoreSqlite-.log",
          // 文件滚动间隔（每天滚动）
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          // 文件输出的格式
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}|{ProcessId}|{ThreadId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        // Seq sink 配置
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        },
        "RestrictedToMinimumLevel": "Information"
      }
    ],
    // 丰富的日志上下文
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "LimLauncher"
    }
  }
}
